    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd/main.go",
            "env": {
                "CONFIG_DIR": "${workspaceRoot}"
            },
            "args": []
        },
        {
            "name": "Remote Docker",
            "type": "go",
            "request": "launch",
            "mode": "remote",
            "remotePath": "/",
            "port": 40000,
            "host": "127.0.0.1",
            "program": "${workspaceRoot}/cmd/main.go",
            "env": {},
            "args": []
        }
    ]
}
